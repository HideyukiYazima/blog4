<h1>Articles</h1>
<%= link_to "New Article", new_article_path %>

<% @articles.each do |article| %>
  <h2><%= article.title %></h2>
  <p><%= article.content %></p>
  <%= link_to "Edit", edit_article_path(article) %>
  <%= link_to "Delete", article_path(article),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this article?" } %>
<% end %>
